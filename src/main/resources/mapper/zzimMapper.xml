    <update id="updateZzimCnt" parameterType="long">
        UPDATE ZZIM
        SET
            ZZIM_ID = ZZIM_ID +1
        WHERE
            ZZIM_ID = #{zzimId}
    </update>

    <select id="getZzimIdCnt" parameterType="ZzimDTO" resultType="int">
        SELECT COUNT(*) AS ZZIM_ID_COUNT
        FROM ZZIM
        WHERE PRODUCT_ID = #{productId} AND USER_ID = #{userId}
    </select>

    <delete id="deleteZzim" parameterType="ZzimDTO">
        DELETE FROM ZZIM
        WHERE PRODUCT_ID = #{productId} AND USER_ID = #{userId}
    </delete>

    <select id="getZzimCount" parameterType="long" resultType="int">
        SELECT COUNT(*)
        FROM ZZIM
        WHERE PRODUCT_ID = #{productId}
    </select>

