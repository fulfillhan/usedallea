    <insert id="insertZzim" parameterType="ZzimDTO">
        INSERT INTO ZZIM(
            ZZIM_ID,
            PRODUCT_ID,
            USER_ID,
            CREATED_AT
        )
        VALUES (
           #{zzimId},
           #{productId},
           #{userId},
           NOW()
               )
